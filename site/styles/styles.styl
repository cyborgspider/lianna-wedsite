global-reset()

//Variables
$gray  = #e1e0e0
$beige = #f4f4f4
$beige-stroke = #e9e9e9

//Base Styles
body
  font 14px/1.5 "Helvetica", "Arial", sans-serif
  background $gray

#wrap
  width 1020px
  margin 0 auto

//Typography
h1 
  font-size 36px
  text-align center 
  margin 35px 0
h2
  font-size 26px 

strong 
  font-weight bold
  text-transform uppercase
em
  font-weight bold

//Nav
#main-nav
  width 100%
  background #fff
  height 115px
  padding 0 20px
  &>li
    float       left
    width       200px
    line-height 115px

//Shared Subpage Components
.content
  clear both
.body
  width         890px
  margin        0 auto
  background    #fff
  padding       40px 15px
  box-sizing    border-box
  border-radius 2px
.well
  background    $beige
  border        solid 1px $beige-stroke
  border-radius 5px
  overflow      hidden
  padding       10px

.map
  float left
.info
  float right
  width 220px

//Home
.img-wrap
  margin-top 40px
//Registry
.registry-list
  overflow hidden
  .col
    float left
    width 50%
    a
      display block

//Form
.row
  clear         both
  clearfix()
  margin-bottom 10px
  position relative
label
  float       left
  text-align  left
  line-height 36px
  margin-right 10px
input[type="text"]
  float      left
  background #f0f0f0
  border     solid 1px $beige-stroke
  width      370px
  height     36px
  padding    0 10px
  box-sizing border-box
  font-size  14px
  &:focus
    outline none
    background #fff
  &.small
    width 40px

.meal
  background   pink
  display      inline-block
  margin-right 10px
  cursor       pointer
  position     relative
  &.chosen
    background blue
//Buttons

//Tooltips
.tooltip
  position absolute
  z-index 1030
  display block
  visibility visible
  font-size 12px
  line-height 1.4
  opacity 0
  &.in
    opacity 0.9
  &.top
    margin-top -3px
    padding 5px 0
    .tooltip-arrow
      bottom 0
      left 50%
      margin-left -5px
      border-width 5px 5px 0
      border-top-color #000000
  &.bottom
    margin-top 3px
    padding 5px 0
    .tooltip-arrow
      top 0
      left 50%
      margin-left -5px
      border-width 0 5px 5px
      border-bottom-color #000000

.tooltip-inner
  max-width 200px
  padding 3px 8px
  color #000
  text-align left
  text-decoration none
  background-color #fff
  border-radius 4px
  border solid 1px #000

.tooltip-arrow
  position absolute
  width 0
  height 0
  border-color transparent
  border-style solid



